{
  "expo": {
    "name": "ReviewMyCampus",
    "slug": "rmc",
    "scheme": "rmc",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "backgroundColor": "#fff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "ReviewMyCampus wants to access your photos."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow ReviewMyCampus to access your camera."
        }
      ],
      "expo-secure-store",
      "expo-localization"
    ],
    "ios": {
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show it on the map.",
        "NSCameraUsageDescription": "This app uses the camera to scan student ID cards."
      },
      "config": {
        "googleMapsApiKey": "AIzaSyCu96pvVcFvKQy4awjhODZmtK1_KR-xfB0"
      }
    },
    "android": {
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyCu96pvVcFvKQy4awjhODZmtK1_KR-xfB0"
        }
      }
    },
    "extra": {
      "eas": {
        "projectId": "4a9f08ec-6363-4406-9cb1-bcfd360aec51"
      }
    }
  }
}
